    function MediasIchimoku(intervalo, grafico) {

    // Médias Ichimoku
        //Tekan-Sen
        var noveH = 0;
        var noveL = 100000000;
        tekan = intervalo.slice(intervalo.length-9,intervalo.length)
        for (var i  = 0; i < tekan.length; i++) {

                if (tekan[i].high > noveH){
                    noveH = tekan[i].high
                }

                if (tekan[i].low < noveL){
                    noveL = tekan[i].low
                }

        }
        tekanmedia = Math.ceil((noveH + noveL) / 2);

        //Kijun-Sen
        noveH = 0;
        noveL = 100000000;             
        kijun = intervalo.slice(intervalo.length-26,intervalo.length)
        for (var i  = 0; i < kijun.length; i++) {

                if (kijun[i].high > noveH){
                    noveH = kijun[i].high
                }

                if (kijun[i].low < noveL){
                    noveL = kijun[i].low
                }

        }
        kijunmedia = Math.ceil((noveH + noveL) / 2);


        //Senkou Span A
        noveH = 0;
        noveL = 100000000;        
        tekan = intervalo.slice((intervalo.length-26)-9,intervalo.length-26)
        for (var i  = 0; i < tekan.length; i++) {

                if (tekan[i].high > noveH){
                    noveH = tekan[i].high
                }

                if (tekan[i].low < noveL){
                    noveL = tekan[i].low
                }

        }
        tekanmedia26 = Math.ceil((noveH + noveL) / 2);

        noveH = 0;
        noveL = 100000000;     
        kijun = intervalo.slice((intervalo.length-26)-26,intervalo.length-26)
        for (var i  = 0; i < kijun.length; i++) {

                if (kijun[i].high > noveH){
                    noveH = kijun[i].high
                }

                if (kijun[i].low < noveL){
                    noveL = kijun[i].low
                }

        }
        kijunmedia26 = (noveH + noveL) / 2;        

        senkouA = Math.ceil(((tekanmedia26 + kijunmedia26) / 2));
        

        //Senkou Span B

        noveH = 0;
        noveL = 100000000;     
        kijun = intervalo.slice((intervalo.length-52)-26,intervalo.length-26)
        for (var i  = 0; i < kijun.length; i++) {

                if (kijun[i].high > noveH){
                    noveH = kijun[i].high
                }

                if (kijun[i].low < noveL){
                    noveL = kijun[i].low
                }

        }
        senkouB = Math.ceil((noveH + noveL) / 2);

        //chickou
        chickou = intervalo[intervalo.length-1].close;
        

        if (grafico == 10){

            $('#Tekan10').text(tekanmedia);
            $('#Kijun10').text(kijunmedia);
            $('#SenkouA10').text(senkouA);
            $('#SenkouB10').text(senkouB);
            $('#Chikou10').text(chickou);

        } else {

            $('#Tekan2').text(tekanmedia);
            $('#Kijun2').text(kijunmedia);
            $('#SenkouA2').text(senkouA);
            $('#SenkouB2').text(senkouB);
            $('#Chikou2').text(chickou);

        }
}

function trade(type){

    if (trades.length % 2 == 0) {

        $("#comment").val("Abrindo posição");


    } else {

        $("#comment").val("Fechando posição");
        if (trades[trades.length-1].type == type){
            $("#comment").val("Faça uma posição inversa. Você já está posicionado neste sentido do mercado.");
            return
        }


    }

    if (type == "buy"){
        trades.push({ date: dados[dados.findIndex(x => x.date2 == dados[dados.length-1].date2)].date, type: "buy", price: dados[dados.findIndex(x => x.date2 == dados[dados.length-1].date2)].low, quantity: 1000 })
        
    }

    if (type == "sell"){
        trades.push({ date: dados[dados.findIndex(x => x.date2 == dados[dados.length-1].date2)].date, type: "sell", price: dados[dados.findIndex(x => x.date2 == dados[dados.length-1].date2)].high, quantity: 1000 })
        
    }

    g2(true);g10();    
}


