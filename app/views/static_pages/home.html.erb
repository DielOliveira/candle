function chart(name, symbol, time, fullWidth, fullHeight, intra) {
    var margin = {top: 20, right: 30, bottom: 30, left: 30},
            width = fullWidth - margin.left - margin.right,
            height = fullHeight - margin.top - margin.bottom,
            volumeHeight = fullHeight*.25;

    if (intra){

        var parseIntradayDate = d3.time.format("%Y%m%d%H%M%Z").parse;

    }else{

        var parseDate = d3.time.format("%d-%b-%y").parse;

    }

    var x = techan.scale.financetime()
            .range([0, width]);

    var y = d3.scale.linear()
            .range([height, 0]);

    var candlestick = techan.plot.candlestick()
            .xScale(x)
            .yScale(y);

    var ichimoku = techan.plot.ichimoku()
            .xScale(x)
            .yScale(y);

    var xAxis = d3.svg.axis()
            .scale(x)
            .orient("bottom");

    var yAxis = d3.svg.axis()
            .scale(y)
            .orient("left")
            .tickFormat(d3.format(",.3s"));

    // var valueText = svg.append('text')
    //         .style("text-anchor", "end")
    //         .attr("class", "coords")
    //         .attr("x", width - 5)
    //         .attr("y", 15);


    var svg = d3.select("#grafico2").append("svg")
            .attr("width", width + margin.left + margin.right)
            .attr("height", height + margin.top + margin.bottom)
        .append("g")
            .attr("transform", "translate(" + margin.left + "," + margin.top + ")");

    svg.append("clipPath")
            .attr("id", "clip")
        .append("rect")
            .attr("x", 0)
            .attr("y", y(1))
            .attr("width", width)
            .attr("height", y(0) - y(1));

    svg.append('text')
            .attr("class", "symbol")
            .attr("x", 5)
            .text(name + " (" + symbol + ")");

    var tradearrow = techan.plot.tradearrow()
            .xScale(x)
            .yScale(y)
            .orient(function(d) { return d.type.startsWith("buy") ? "up" : "down"; })
            .on("mouseenter", enter)
            .on("mouseout", out);            

    var ichimokuIndicator = techan.indicator.ichimoku();
    // Don't show where indicators don't have data
    var indicatorPreRoll = ichimokuIndicator.kijunSen()+ichimokuIndicator.senkouSpanB();

    var feed;

    d3.csv('datas/' + symbol + ".csv", function(error, data) {
        var accessor = candlestick.accessor();

        feed = data.map(function(d) {
            // Open, high, low, close generally not required, is being used here to demonstrate colored volume
            // bars
            return {
                date: parseIntradayDate(d.Date + '-0260'),
                date2: +d.Date,
                volume: +d.Volume,
                open: +d.Open,
                high: +d.High,
                low: +d.Low,
                close: +d.Close
            };
        }).sort(function(a, b) { return d3.ascending(accessor.d(a), accessor.d(b)); });


        svg.append("g")
                .attr("class", "tradearrow");

        svg.append("g")
                .attr("class", "ichimoku")
                .attr("clip-path", "url(#clip)");

        svg.append("g")
                .attr("class", "candlestick")
                .attr("clip-path", "url(#clip)");

        svg.append("g")
                .attr("class", "x axis")
                .attr("transform", "translate(0," + height + ")");

        svg.append("g")
                .attr("class", "y axis")
            .append("text")
                .attr("transform", "rotate(-90)")
                .attr("y", 6)
                .attr("dy", ".71em")
                .style("text-anchor", "end")
                .text("Ichimoku");

        // Data to display initially
        data = feed.slice(0, 163)



        if (time == 2){

            // trades = [
            //     { date: feed[feed.findIndex(x => x.date2 == 201603181728)].date, type: "buy", price: feed[feed.findIndex(x => x.date2 == 201603181728)].low, quantity: 1000 }

            // ];


            g2 =  function (negocia) {


                if (negocia != true){
                    feed.shift();
                }
                newdata = feed.slice(0,163);
                dados = newdata;
                hora = moment(newdata[newdata.length-1].date).format('hh:mm');
                ultimo = newdata[newdata.length-1].close;

                if (maxima < newdata[newdata.length-1].high){maxima = newdata[newdata.length-1].high;}
                if (minima > newdata[newdata.length-1].low){minima = newdata[newdata.length-1].low;}
                if (abertura == 0){abertura = abertura = data[data.length-1].open;}

                $('#abertura').text(abertura);
                $('#ultimo').text(ultimo);
                $('#hora').text(hora);
                $('#maxima').text(maxima);
                $('#minima').text(minima);

                MediasIchimoku(newdata,2);

                media.push(Math.abs(newdata[newdata.length-1].open - newdata[newdata.length-1].close));

                if (media.length > 9){
                    media.shift();
                }

                mediaAtual = media[media.length-1]
                mediaFinal = (media.reduce(function(previousValue, currentValue)  {  return previousValue + currentValue; }) / media.length).toFixed(2)                

                $('#candle').text(mediaAtual);
                $('#media9').text(mediaFinal);

                fechamento = newdata[newdata.length-1].close;
                draw(newdata,trades);

            }
        }


        if (time == 10){

            g10 = function () {

                if (count == 5) {
                    feed.shift();
                    newdata = feed.slice(0,163);
                    
                    var last = newdata[newdata.length-1];
                    original = last.close
                    last.close = fechamento;

                    draw(newdata);
                    count = 1;
                } else {

                                        
                    data = feed.slice(0,163)
                    var last = data[data.length-1];
                    original = last.close
                    last.close = fechamento;

                    draw(data);
                    //last.close = original;
                    count = count + 1;

                }

                MediasIchimoku(newdata,10);

            }
        }


        draw(data,trades);
    });

    function draw(data, trades) {

        var ichimokuData = ichimokuIndicator(data);
        x.domain(data.map(ichimokuIndicator.accessor().d));
        // Calculate the y domain for visible data points (ensure to include Kijun Sen additional data offset)
        y.domain(techan.scale.plot.ichimoku(ichimokuData.slice(indicatorPreRoll-ichimokuIndicator.kijunSen())).domain());

        // Logic to ensure that at least +KijunSen displacement is applied to display cloud plotted ahead of ohlc
        var zoomable = x.zoomable().clamp(false);
        zoomable.domain([indicatorPreRoll, data.length+ichimokuIndicator.kijunSen()]);

        svg.selectAll("g.candlestick").datum(data).call(candlestick);
        svg.selectAll("g.ichimoku").datum(ichimokuData).call(ichimoku);

        if (trades){
            svg.selectAll("g.tradearrow").datum(trades).call(tradearrow);
        }


        svg.selectAll("g.x.axis").call(xAxis);
        svg.selectAll("g.y.axis").call(yAxis);
    }

}

