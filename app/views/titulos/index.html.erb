  Listando TÃ­tulos
<%end%>

  <% flash.each do |name, msg| -%>
  <div class="alert alert-warning alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <%= msg%>
  </div>      
  <% end -%>

  <div class="box box-info">
    <div class="box-header with-border">
    </div>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Cpodigo</th>
            <th>Valor Por Tick</th>
            <th>Ativo</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @titulos.each do |titulo| %>
            <tr>
              <td><%= titulo.codigo %></td>
              <td><%= titulo.valortick %></td>
              <td><%= iconTrueOrFalse(titulo.flagativo) %></td>
              <td>
                <div class="btn-group pull-right">
                  <%= link_to titulo, :class => "btn btn-default" do %>
                    <i class="fa fa-list-alt"></i> Exibir
                  <% end %>
                  <%= link_to edit_titulo_path(titulo), :class => "btn btn-default" do %>
                    <i class="fa fa-edit"></i> Editar
                  <% end %>
                  <%= link_to raw("<i class=\"fa fa-trash\"></i> Excluir"), 
                    titulo_path(:id => titulo.id),
                    class: "btn btn-default",
                    method: :delete %>                  
                </div>
              </td>

              <%#= link_to 'Edit', edit_titulo_path(titulo) %>
              <%#= link_to 'Destroy', titulo, method: :delete, data: { confirm: 'Are you sure?' } %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <div class="box-footer">
        <%= link_to new_titulo_path, :class => "btn btn-success pull-right" do %>
        <span class="glyphicon glyphicon-file"></span> Novo
        <% end %>      
      </div>      

  </div>