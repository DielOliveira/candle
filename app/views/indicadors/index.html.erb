<%content_for :head do%>
  Listando Indicadores
<%end%>

  <% flash.each do |name, msg| -%>
  <div class="alert alert-warning alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <%= msg%>
  </div>      
  <% end -%>

  <div class="box box-info">
    <div class="box-header with-border">
    </div>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Indicador</th>
            <th>Descrição</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @indicadors.each do |indicador| %>
            <tr>
              <td><%= indicador.indicador %></td>
              <td><%= indicador.descricao %></td>
              <td>
                <div class="btn-group pull-right">
                  <%= link_to indicador, :class => "btn btn-default" do %>
                    <i class="fa fa-list-alt"></i> Exibir
                  <% end %>
                  <%= link_to edit_indicador_path(indicador), :class => "btn btn-default" do %>
                    <i class="fa fa-edit"></i> Editar
                  <% end %>
                  <%= link_to raw("<i class=\"fa fa-trash\"></i> Excluir"), 
                    indicador_path(:id => indicador.id),
                    class: "btn btn-default",
                    method: :delete %>                  
                </div>
              </td>

            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <div class="box-footer">
        <%= link_to new_indicador_path, :class => "btn btn-success pull-right" do %>
        <span class="glyphicon glyphicon-file"></span> Novo
        <% end %>      
      </div>      

  </div>

