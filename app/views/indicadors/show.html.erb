<% content_for :head do %>
  Exibindo Indicador
<%end%>


	<% flash.each do |name, msg| -%>
	<div class="alert alert-warning alert-dismissible fade in" role="alert">
	  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	  <%= msg%>
	</div>      
	<% end -%>

    <div class="box box-info">
      <div class="box-header with-border">
      </div>

      	<div class="box-body">
			<p>
			  <strong>Indicador:</strong>
			  <%= @indicador.indicador %>
			</p>

			<p>
			  <strong>Descricao:</strong>
			  <%= @indicador.descricao %>
			</p>
		</div>


		<div class="row">
		  <div class="col-md-3">
		  </div>
		  <div class="col-lg-6">

			<table class="table table-hover">
			  <thead>
			    <tr>
			      <th>Indicador</th>
			      <th>Descricao</th>
			      <th>Valor</th>
			      <th colspan="3"></th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @indicadorsetupdetalhes.each do |indicadorsetupdetalhe| %>
			      <tr>
			        <td><%= indicadorsetupdetalhe.indicador.indicador %></td>
			        <td><%= indicadorsetupdetalhe.descricao %></td>
			        <td><%= indicadorsetupdetalhe.valordefault %></td>
					<td>
						<div class="btn-group pull-right">
						  <%= link_to raw("<i class=\"fa fa-trash\"></i> Excluir"), 
						    indicadorsetupdetalhe_path(:id => indicadorsetupdetalhe.id),
						    class: "btn btn-default",
						    method: :delete %>                  
						</div>
					</td>			        
			      </tr>
			    <% end %>
			  </tbody>
			</table>
			</div>
		</div>

		<div class="row">
			<div class="col-md-3">
			</div>
			<div class="col-lg-6">
				<%= render './indicadorsetupdetalhes/form' %>
			</div>
		</div>		


        <div class="box-footer">
			<div class="btn-group pull-right">
				<%= link_to edit_indicador_path(@indicador), :class => "btn btn-warning" do %>
					<i class="fa fa-edit"></i> Editar
				<% end %>
				<%= link_to indicadors_path, :class => "btn btn-danger" do %>
					<i class="fa fa-arrow-left"></i> Voltar
				<% end %>
			</div>
		</div>
	</div>			

