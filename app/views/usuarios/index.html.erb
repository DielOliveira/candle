<% content_for :head do %>
  Lista de Usu√°rios
<% end %>

<div class="row">
  <div class="col-md-12">
  <% flash.each do |name, msg| -%>
  <div class="alert alert-warning alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <%= msg%>
  </div>      
  <% end -%>

  <div class="box box-info">
    <div class="box-header with-border">
    </div>

      <table class="table table-hover">

        <thead>
          <tr>
            <th>Email</th>
            <th>Senha</th>
            <th>Nome</th>
            <th>Data de Nascimento</th>
            <th>Ultimo Login</th>
            <th>Ativo</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @usuarios.each do |usuario| %>
            <tr>
              <td><%= usuario.email %></td>
              <td><%= usuario.senha %></td>
              <td><%= usuario.nomecompleto %></td>
              <td><%= usuario.datascimento %></td>
              <td><%= usuario.ultimologin %></td>
              <td><%= iconTrueOrFalse(usuario.flagativo) %></td>
              <td>
                <div class="btn-group pull-right">
                  <%= link_to usuario, :class => "btn btn-default" do %>
                    <i class="fa fa-list-alt"></i> Exibir
                  <% end %>
                  <%= link_to edit_usuario_path(usuario), :class => "btn btn-default" do %>
                    <i class="fa fa-edit"></i> Editar
                  <% end %>
                  <%= link_to raw("<i class=\"fa fa-trash\"></i> Excluir"), 
                    usuario_path(:id => usuario.id),
                    class: "btn btn-default",
                    method: :delete %>                  
                </div>
              </td>

            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <div class="box-footer">
        <%= link_to new_usuario_path, :class => "btn btn-success pull-right" do %>
        <span class="glyphicon glyphicon-file"></span> Novo
        <% end %>      
      </div>      

  </div>
</div>
</div>