<%content_for :head do%>
  Exibindo Pregão
<%end%>

	<% flash.each do |name, msg| -%>
	<div class="alert alert-warning alert-dismissible fade in" role="alert">
	  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	  <%= msg%>
	</div>      
	<% end -%>

    <div class="box box-info">
      <div class="box-header with-border">
        <h3 class="box-title">Exibindo Pregão</h3>
      </div>

      	<div class="box-body">
			<p>
			  <strong>Data:</strong>
			  <%= showDate(@pregoestitulo.pregao.data,false) %>
			</p>
			<p>
			  <strong>Titulo:</strong>
			  <%= @pregoestitulo.titulo.codigo %>
			</p>
			<p>
			  <strong>Ativo:</strong>
			  <%= iconTrueOrFalse(@pregoestitulo.flagativo) %>
			</p>
		</div>


		<div class="row">
		  <div class="col-md-3">
		  </div>
		  <div class="col-lg-6">

				<table class="table table-hover">
				  <thead>
				    <tr>
				      <th>Tempo Grafico</th>
				      <th>Arquivo</th>
				      <th colspan="3"></th>
				    </tr>
				  </thead>

				  <tbody>
				    <% @pregoestitulosgraficos.each do |pregoestitulosgrafico| %>
				      <tr>
				        <td><%= pregoestitulosgrafico.tempografico.tempo %></td>
				        <td><%= pregoestitulosgrafico.arquivo.nome %></td>
				        <td>
			              <div class="btn-group pull-right">
			                <%= link_to raw("<i class=\"fa fa-trash\"></i> Excluir"), 
			                  pregoestitulosgrafico_path(:id => pregoestitulosgrafico.id),
			                  class: "btn btn-default",
			                  method: :delete %>                  
			              </div>
		              	</td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>

			</div>
		</div>		

		<div class="row">
			<div class="col-md-3">
			</div>
			<div class="col-lg-6">
				<%= render './pregoestitulosgraficos/form' %>
			</div>
		</div>


        <div class="box-footer">
			<div class="btn-group pull-right">
				<%= link_to edit_pregoestitulo_path(@pregoestitulo), :class => "btn btn-warning" do %>
					<i class="fa fa-edit"></i> Editar
				<% end %>
				<%= link_to pregoestitulos_path, :class => "btn btn-danger" do %>
					<i class="fa fa-arrow-left"></i> Voltar
				<% end %>
			</div>
		</div>
	</div>
</div>
</div>
